{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  apps : [
    // First application
    {
      name      : "ExploreaAT-production",
      script    : "bin/www",
      env: {
        PORT: "3000"
      },
      env_production : {
        NODE_ENV: "production",
        PORT: "3002",
        NODE_CONFIG_DIR: "../"
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  deploy : {
    production : {
      user : "exploreat",
      host : "exploreat.usal.es",
      ref  : "origin/master",
      repo : "https://alex:033myLNRfjK@gitlab.grial.eu:usal-vis/exploreat.git",
      path : "/usr/src/app/production",
      "post-deploy" : "npm install ; bower install; pm2 startOrRestart ecosystem-prod.json --env production",
      env  : {
        NODE_ENV: "production"
      }
    }
  }
}
