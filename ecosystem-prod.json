{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  apps : [
    // First application
    {
      name      : "ExploreaAT-production",
      script    : "bin/www",
      log_date_format : "YYYY-MM-DD HH:mm Z",
      env: {
        PORT: "3002"
      },
      env_production : {
        NODE_ENV: "production",
        PORT: "3002",
        NODE_CONFIG_DIR: "../"
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  deploy : {
    production : {
      user : "exploreat",
      host : "exploreat.usal.es",
      ref  : "origin/master",
      repo : "https://alex:033myLNRfjK@gitlab.grial.eu/usal-vis/exploreat.git",
      path : "/usr/src/app/production",
      "post-deploy" : "npm install ; cd public/exploreat-v3; bower install; cd ../../; cd public/seriousgames; bower install; cd ../../; cd public/conceptlights; npm install; webpack; cd ../../; webpack --config webpack.config.production.js; pm2 startOrRestart ecosystem-prod.json --env production",
      env  : {
        NODE_ENV: "production"
      }
    }
  }
}
