{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  apps : [
    // First application
    {
      name      : "ExploreaAT-staging",
      script    : "bin/www",
      env: {
        PORT: "3000"
      },
      env_staging : {
        NODE_ENV: "staging",
        PORT: "3001",
        TEST: true,
        NODE_CONFIG_DIR: "../"
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  deploy : {
    staging : {
      user : "exploreat",
      host : "exploreat.usal.es",
      ref  : "origin/develop",
      repo : "***REMOVED***",
      path : "/usr/src/app/staging",
      "post-deploy" : "npm install ; bower install; pm2 startOrRestart ecosystem.json --env staging",
      env  : {
        NODE_ENV: "staging"
      }
    }
  }
}
